<form method="post" action="/user<%= @user.id %>">
  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @user.name %>"
  />

  <label for=age-field">Age:</label>
  <input
  type="number"
  name="age"
  id="age-field"
  value="<%= @user.age %>"
  />
  <input type='submit' value="Edit User">
</form>
